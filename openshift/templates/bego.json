{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "thresholdmetrics",
    "annotations": {
      "description": "An example Beego (http://beego.me/) application written in Golang",
      "tags": "quickstart,golang",
      "iconClass": "icon-go-gopher"
    }
  },
  "labels": {
      "template": "thresholdmetrics",
      "app": "thresholdmetrics"
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "thresholdmetrics",
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 8080,
            "targetPort": 7777
          }
        ],
        "selector": {
          "name": "thresholdmetrics"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "thresholdmetrics"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "to": {
          "kind": "Service",
          "name": "thresholdmetrics"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "thresholdmetrics",
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "thresholdmetrics",
        "annotations": {
          "description": "Defines how to build the application"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "v0.1.1"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
                    "dockerStrategy": {
                        "env": [
                            {
                                "name": "XDG_CACHE_HOME",
                                "value": "/tmp/"
                            }
                        ]
                    },
                    "type": "Docker"
                },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "thresholdmetrics:latest"
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "thresholdmetrics",
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "thresholdmetrics"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "thresholdmetrics:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "thresholdmetrics"
        },
        "template": {
          "metadata": {
            "name": "thresholdmetrics",
            "labels": {
              "name": "thresholdmetrics"
            }
          },
          "spec": {
            "serviceAccountName": "thresholdmetrics",
            "containers": [
              {
                "name": "thresholdmetrics",
                "image": "thresholdmetrics",
                "ports": [
                  {
                    "containerPort": 7777
                  }
                ]
              }
            ]
          }
        }
      }
    }
 ],
  "parameters": [
    {
      "name": "SOURCE_REPOSITORY_URL",
      "description": "The URL of the repository with your application source code",
      "value": "https://github.com/openshift/golang-ex.git"
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch"
    },
    {
      "name": "CONTEXT_DIR",
      "description": "Set this to the relative path to your project if it is not in the root of your repository"
    },
    {
      "name": "APPLICATION_DOMAIN",
      "description": "The exposed hostname that will route to the Beego service",
      "value": "thresholdmetrics.openshiftapps.com"
    }
  ]
}
